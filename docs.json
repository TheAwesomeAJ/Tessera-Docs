  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://github.com/TheAwesomeAJ/Tessera/discussions"
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/theawesomeaj/tessera"
