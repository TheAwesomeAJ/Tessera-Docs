    "versions": [
      {
        "version": "v0.1",
        "default": true,
        "groups": [
          {
            "group": "Getting started",
            "icon": "list-check",
            "pages": [
              "index"
            ]
          },
          {
            "group": "Installation",
            "icon": "download",
            "pages": [
              "guides/installation/intro",
              "guides/installation/using-exe",
              "guides/installation/using-pip"
            ]
          }
        ]
      }
    ]
