{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Tessera Docs",
  "colors": {
    "primary": "#15a38f",
    "light": "#06c9ae",
    "dark": "#14806e"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "GitHub Discussions",
          "icon": "message-code",
          "href": "https://github.com/TheAwesomeAJ/Tessera/discussions"
